<% layout("/layouts/boilerplate") %>

<script>
    const mapToken = "<%= mapToken %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<% if (listing) { %>
<div class="container my-4">

    <!-- Listing Title -->
    <div class="row mb-3 text-center">
        <h2 class="fw-bold"><%= listing.title %></h2>
    </div>

    <!-- Listing Card -->
    <div class="card mx-auto shadow-lg rounded-3 listing-card" style="max-width: 700px;">
        <% 
            let imageSrc = "";
            if (listing.image) {
                if (typeof listing.image === "string") {
                    imageSrc = listing.image;
                } else if (listing.image.url) {
                    imageSrc = listing.image.url;
                }
            }
        %>
        <img src="<%= imageSrc || '/images/default.jpg' %>" 
             class="card-img-top img-fluid rounded-top"
             alt="Listing image">

        <div class="card-body">
            <p class="card-text">Owned by <i>@<%= listing.owner.username %></i></p>
            <p class="card-text"><%= listing.description || "No description available." %></p>
            <p class="fw-bold text-success">
                â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>
            </p>
            <p class="text-muted"><%= listing.location || "No location" %>, <%= listing.country || "No country" %></p>
        </div>
    </div>

    <!-- Edit / Delete Buttons -->
    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="d-flex justify-content-center gap-3 my-3 flex-wrap">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
    <% } %>

    <!-- Review Form -->
    <div class="mt-4">
        <% if (currUser) { %>
        <hr />
        <h4 class="mb-3">Leave a Review</h4>
        <form 
            action="/listings/<%= listing.id %>/reviews" 
            method="POST" 
            novalidate 
            class="needs-validation">

            <!-- Rating -->
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>

                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>

                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>

                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>

                    <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>

            <!-- Comment -->
            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea  
                    name="review[comment]" 
                    id="comment" 
                    rows="4" 
                    class="form-control"
                    placeholder="Write your review..."
                    required></textarea>
                <div class="invalid-feedback">Please add some comment for review</div>
            </div>

            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <% } %>
    </div>

    <!-- Reviews Section -->
    <% if(listing.reviews.length > 0) { %>
    <hr />
    <div class="mt-4">
        <h4>All Reviews</h4>
        <div class="row">
            <% for(review of listing.reviews) { %>
            <div class="col-md-5 col-12 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title">@<%= review.author.username %></h6>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        <p class="card-text"><%= review.comment %></p>
                        <% if(currUser && review.author._id.equals(currUser._id)) { %>
                        <form 
                            method="POST" 
                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <% } %>

    <!-- Map Section -->
    <div class="mt-5">
        <h4>Where you'll be</h4>
        <div id="map" class="rounded shadow-sm" style="height: 350px; width: 100%;"></div>
    </div>
</div>

<% } else { %>
    <p class="text-danger text-center mt-5">Listing not found.</p>
<% } %>

<script>
    // Form Validation
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>

<script src="/js/map.js"></script>
