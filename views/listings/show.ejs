<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= mapToken %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<% if (listing) { %>
<div class="container my-5">

  <!-- Title + Location -->
  <div class="text-center mb-4">
    <h2 class="fw-bold"><%= listing.title %></h2>
    <p class="text-muted"><%= listing.location || "Unknown location" %>, <%= listing.country || "" %></p>
  </div>
  <!-- Average Rating Section -->
  <div class="d-flex justify-content-center align-items-center mb-3">
    <% 
      let totalReviews = listing.reviews.length;
      let avgRating = 0;
      if (totalReviews > 0) {
        avgRating = (
          listing.reviews.reduce((sum, r) => sum + r.rating, 0) / totalReviews
        ).toFixed(1);
      }
    %>

    <% if (totalReviews > 0) { %>
    <!-- Stars -->
      <p class="starability-result mb-0" data-rating="<%= Math.round(avgRating) %>"></p>

    <!-- Avg + Count -->
      <span class="ms-2 text-secondary fw-semibold" style="font-size: 0.95rem;">
        <%= avgRating %> · <%= totalReviews %> review<%= totalReviews > 1 ? "s" : "" %>
      </span>
    <% } else { %>
      <span class="text-muted" style="font-size: 0.95rem;">No reviews yet</span>
    <% } %>
  </div>

  

  <!-- Main Listing Card -->
  <div class="card border-0 shadow-sm mx-auto rounded-4 overflow-hidden" style="max-width: 850px;">
    <% 
      let imageSrc = "";
      if (listing.image) {
        if (typeof listing.image === "string") {
          imageSrc = listing.image;
        } else if (listing.image.url) {
          imageSrc = listing.image.url;
        }
      }
    %>
    <img src="<%= imageSrc || '/images/default.jpg' %>" 
         class="card-img-top img-fluid"
         style="height: 400px; object-fit: cover;"
         alt="Listing image">

    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <p class="mb-1">Hosted by <span class="fw-semibold">@<%= listing.owner.username %></span></p>
        <p class="fw-bold text-success fs-5">₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night</p>
      </div>

      <p class="card-text text-secondary mb-3">
        <%= listing.description || "No description available." %>
      </p>
    </div>
  </div>

  <!-- Edit/Delete (Owner Only) -->
  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark rounded-pill px-4">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-outline-danger rounded-pill px-4">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- Review Form -->
  <% if (currUser) { %>
  <div class="mt-5">
    <h4 class="fw-semibold mb-3">Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
      
      <!-- Rating -->
      <div class="mb-3">
        <label for="rating" class="form-label fw-semibold">Rating</label>
        <fieldset class="starability-slot">
          <% for (let i = 1; i <= 5; i++) { %>
            <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>" <%= i === 5 ? "checked" : "" %> />
            <label for="rate<%= i %>" title="<%= i %> star"><%= i %> star</label>
          <% } %>
        </fieldset>
      </div>

      <!-- Comment -->
      <div class="mb-3">
        <label for="comment" class="form-label fw-semibold">Comments</label>
        <textarea name="review[comment]" id="comment" rows="4" class="form-control rounded-3 shadow-sm"
                  placeholder="Share your experience..." required></textarea>
        <div class="invalid-feedback">Please add some comment for review</div>
      </div>

      <button class="btn btn-dark rounded-pill px-4">Submit</button>
    </form>
  </div>
  <% } %>

  <!-- Reviews Section -->
  <% if(listing.reviews.length > 0) { %>
  <hr class="my-5" />
  <div>
    <h4 class="fw-semibold mb-4">Guest Reviews</h4>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="col-md-6 col-12 mb-3">
        <div class="card border-0 shadow-sm rounded-4 h-100">
          <div class="card-body">
            <h6 class="fw-semibold">@<%= review.author.username %></h6>

            <div class="d-flex align-items-center mb-2">
              <p class="starability-result mb-0" data-rating="<%= review.rating %>"></p>
              <span class="ms-2 text-secondary fw-semibold" style="font-size: 0.9rem;">
                <%= review.rating %>.0
              </span>
            </div>

            <p class="text-muted"><%= review.comment %></p>

            <% if(currUser && review.author._id.equals(currUser._id)) { %>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-outline-danger rounded-pill">Delete</button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <% } %>

  <!-- Map -->
  <div class="mt-5">
    <h4 class="fw-semibold mb-3">Where you’ll be</h4>
    <div id="map" class="rounded-4 shadow-sm" style="height: 350px; width: 100%;"></div>
  </div>
</div>

<% } else { %>
  <p class="text-danger text-center mt-5">Listing not found.</p>
<% } %>

<script>
  // Form Validation
  (function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>

<script src="/js/map.js"></script>
